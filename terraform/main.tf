module "edge_waf" {
  source = "./modules/edge_waf"

  project_name             = var.project_name
  environment              = var.environment
  alb_arn                  = aws_lb.main.arn
  enable_logging           = var.enable_waf_logging
  kinesis_firehose_arn     = var.enable_waf_logging ? aws_kinesis_firehose_delivery_stream.waf_logs[0].arn : null
